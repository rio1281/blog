<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="header">
		<div id="title">
			<%= "Blog" %>
		</div>

		<div id="navi">
		  <% if current_user %>

		  	<% if current_user.site %>
			  	<%= link_to "マイページ", site_admin_path(current_user.site), :style=>"color:white;" %>
			  <% else %>
			  	<%= link_to "ブログ作成", new_site_path, :style=>"color:white;" %>
			  <% end %>

		    <%= link_to "ログアウト", "/session", :method=>	:delete, :style=>"color:white;" %>
		  <% else %>
		  	<%= link_to "新規登録", "/users/new", :style=>"color:white;" %>
		    <%= link_to "ログイン", "/session/new", :style=>"color:white;" %>
		  <% end %>
		</div>
	</div>

<%= yield %>

</body>
</html>
