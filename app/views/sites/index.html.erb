<div class="container">
  <h1>Blogトップページ</h1>

  <div class="span12">
    <h3 class="page-header">新着記事</h3>
    <% @posts.each do |post| %>
      <ul style='list-style-type:none;'>
        <li class="span3">
          <div class="thumbnail">
            <div class="caption">
              <p class="text-right"><%= post.created_at.strftime("%Y/%m/%d %X") %></p>
              <h4><%= link_to post.title, site_post_path(post.site, post) %></h4>
              <p><%= truncate(post.body, :length => 60) %></p>
              <p class="text-right">コメント(<%= post.comments.length %>) | <%= post.site.title %></p>
              <p class="text-right"><%= link_to "read more..", site_post_path(post.site, post) %></p>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  </div>

  <div class="span12">
    <h3 class="page-header">ブログ一覧</h3>
    <% @sites.each do |site| %>
      <ul style='list-style-type:none;'>
        <li class="span3">
          <div class="thumbnail">
            <div class="caption">
              <p class="text-right"><%= site.created_at.strftime("%Y/%m/%d %X") %></p>
              <h3><%= link_to site.title, site %></h3>
              <p><%= site.user.name %>さんのブログ</p>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  </div>

</div>
