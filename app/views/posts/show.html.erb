<h1><%= @post.site.title %></h1>
<h2><%= @post.title %></h2>
<p id="notice"><%= notice %></p>

<p><%= @post.created_at.strftime("%Y/%m/%d %X") %></p>
<p><%= @post.body %></p>

<p><%= link_to '一覧へ戻る', site_path(@post.site) %></p>

<!-- コメント投稿box -->
<h3>Comment</h3>
<% if current_user %>
  <%= render 'form' %>
<% end %>

<!-- コメント一覧 -->
<table>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %>さん</td>
        <td><%= comment.created_at.strftime("%Y/%m/%d %X") %></td>
      </tr>
      <tr>
        <td><%= comment.comment %></td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to 'Edit', edit_site_post_comment_path(comment.post.site, comment.post, comment) %> |
            <%= link_to 'Destroy', [@post.site, @post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
