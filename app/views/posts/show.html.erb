<h1>記事詳細ページ</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Back', site_path(@post.site) %>

<!-- コメント投稿box -->
<%= render 'form' %>

<!-- コメント一覧 -->
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to 'Edit', edit_site_post_comment_path(comment.post.site, comment.post, comment) %></td>
        <td><%= link_to 'Destroy', [@post.site, @post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
