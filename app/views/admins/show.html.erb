<div class="container">
  <h1 class="page-header"><%= current_user.name %>さんの記事一覧</h1>

  <%= render 'sidenavi' %>

  <div class="span8">
    <% @posts.each do |post| %>
      <h4><%= link_to post.title, site_post_path(post.site, post) %></h4>
      <p>コメント(<%= post.comments.length %>) <%= post.created_at.strftime("%Y/%m/%d %X") %></p>
      <p>
        <%= link_to 'Edit', edit_site_admin_post_path(post.site, post) %> |
        <%= link_to 'Destroy', site_admin_post_path(post.site, post), method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
      <hr>
    <% end %>
  </div>

</div>
